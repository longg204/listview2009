<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_monan"
        android:layout_width="130dp"
        android:layout_height="130dp" />

    <TextView
        android:id="@+id/text_tenmon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_monan"
        android:paddingLeft="30dp"
        android:text="Tên món ăn:"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/them_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="343dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/ic_add"
        android:padding="15dp" />

    <TextView
        android:id="@+id/text_chitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tenmon"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/image_monan"
        android:paddingLeft="30dp"
        android:text="Mô tả:"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/tru_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/them_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="343dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/ic_minus"
        android:padding="15dp" />

    <TextView
        android:id="@+id/text_giatien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_tenmon"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/image_monan"
        android:paddingLeft="150dp"
        android:text="6$"
        android:textColor="#333CE6"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
</RelativeLayout>